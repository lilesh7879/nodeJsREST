<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partials/head'); %>
</head>

<body>

    <header>
        <%- include('partials/header'); %>
    </header>

    <div class="container-fluid">
        <div class="row mt-2">
            <div class="col-md-8">
                <div class="card-header">
                    <h1>Edit a Blog</h1>
                </div>
                <div class="card-body">
                    <form class="form-horizontal" method='POST' action="http://localhost:3000/api/blogs/<%= data.blogId %>?_method=PUT">
                        <div class="form-group row">
                            <label for="title" class="col-sm-2 col-form-label">Title</label>
                            <div class="col-sm-10">
                                <input type="text" name="title" class="form-control" id="title" placeholder="Title" value="<%= data.title %>">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="content" class="col-sm-2  col-form-label">Content</label>
                            <div class="col-sm-10">
                                <textarea name="content" class="form-control" id="content" placeholder="Content..."
                                    style="height: 12rem;">"<%= data.content %>"</textarea>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="createdBy" class="col-sm-2  col-form-label">Author</label>
                            <div class="col-sm-10">
                                <input type="text" name="createdBy" class="form-control" id="createdBy"
                                    placeholder="Author" value="<%= data.createdBy %>">
                            </div>
                        </div>
                        <div class="form-group my-4 text-center">
                            <button type="submit" class="btn btn-primary">Update Blog</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-4">
                
            </div>
        </div>

    </div>
    <footer>
        <%- include('partials/footer'); %>
    </footer>

</body>

</html>